        <item name="textAppearanceBodyLarge">@style/CustomTextAppearance</item>
        <item name="textAppearanceBodyMedium">@style/CustomTextAppearance</item>
        <item name="textAppearanceBodySmall">@style/CustomTextAppearance</item>
        <item name="textAppearanceHeadlineMedium">@style/CustomTextAppearance</item>
